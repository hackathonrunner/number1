<script>
	$(document).ready(function() {
		var pageContainer = $('#Content');
		var readingOptionsDropdown = $('.reading-options .dropdown-menu');
		var theme = $('.reading-options .theme');
		var sizing = $('.reading-options .sizing');
		var resetOption = $('.reading-options .reset-view');
		var functLinks = $('.reading-options-container .functional-links, .article-main-content .functional-links, .daily-content .functional-links');

		//Set theme color
		theme.click(function () {
			theme.removeClass('active');
			pageContainer.removeAttr('data-page-theme');
			if ($(this).hasClass('dark')) {
				pageContainer.attr('data-page-theme', 'dark');
				functLinks.removeClass('black');
				functLinks.addClass('white');
			} else {
				pageContainer.attr('data-page-theme', 'light');
				functLinks.removeClass('white').addClass('black');
			};
			$(this).addClass('active');
		});

		//Set font-size of article
		sizing.click(function () {
			sizing.removeClass('active');
			pageContainer.removeAttr('data-font-sizing');
			var fontSize = $(this).data('font');
			pageContainer.attr('data-font-sizing', fontSize);
			$(this).addClass('active');
		});

		//Reset option
		resetOption.click(function () {
			theme.removeClass('active');
			sizing.removeClass('active');
			readingOptionsDropdown.find('.light').addClass('active');
			readingOptionsDropdown.find('.medium-font').addClass('active');
			pageContainer.attr('data-page-theme', 'light');
			pageContainer.attr('data-font-sizing', 'middle');
			if (functLinks.hasClass('white')) {
				functLinks.removeClass('white');
			}
		});
	});
</script>
